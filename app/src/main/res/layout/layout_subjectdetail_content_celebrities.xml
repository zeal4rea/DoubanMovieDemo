<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <TextView
        android:id="@+id/subjectdetail_content$text_view_celebrities_label"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="@string/celebrity"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subjectdetail_content$recycler_view_celebrities"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="6dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subjectdetail_content$text_view_celebrities_label" />

    <TextView
        android:id="@+id/subjectdetail_content$text_view_no_celebrity"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/primaryTextColor"
        android:text="@string/no_celebrity"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subjectdetail_content$text_view_celebrities_label" />

</android.support.constraint.ConstraintLayout>